void APP_Counter_SvnSeg_2Btn_3Led(void)
{
	while(1)
		{
			//button 0 pressed
			if( BTN0_GetValue())
			{
				while(BTN0_GetValue())
				{
					APP_COUNTER(count);
					LED1_Off();
				}
				count++;
				if(count>99)
				{
					count=0;
				}

			}
			else
			{
				LED1_On();
			}


			if( BTN1_GetValue())
			{
				while(BTN1_GetValue());

			}
			else
			{

			}

			//button 2 pressed
			if( BTN2_GetValue())
			{
				while(BTN2_GetValue())
				{
					APP_COUNTER(count);
					LED2_Off();
				}
				if(count==0)
				{
					count=99;
				}
				else
				{
					count--;
				}
			}
			else
			{
				LED2_On();
			}


		APP_COUNTER(count);
		}
}
