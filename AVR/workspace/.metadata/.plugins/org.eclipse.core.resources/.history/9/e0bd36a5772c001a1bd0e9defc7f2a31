#ifndef MCAL_INC_DIO_REGISTER_H_
#define MCAL_INC_DIO_REGISTER_H_

/* address for port A */
#define DIO_PORTA	*((volatile u8*)0x3B)
#define DIO_DDRA	*((volatile u8*)0x3A)
#define DIO_PINA	*((volatile u8*)0x39)

/* address for port B */
#define DIO_PORTB	*((volatile u8*)0x38)
#define DIO_DDRB	*((volatile u8*)0x37)
#define DIO_PINB	*((volatile u8*)0x36)

/* address for port C */
#define DIO_PORTC	*((volatile u8*)0x35)
#define DIO_DDRC	*((volatile u8*)0x34)
#define DIO_PINC	*((volatile u8*)0x33)

/* address for port D */
#define DIO_PORTD	*((volatile u8*)0x32)
#define DIO_DDRD	*((volatile u8*)0x31)
#define DIO_PIND	*((volatile u8*)0x30)


#define DIO_PORT(n)	 *((volatile u8*)(0x3B-(3*n)))
#define DIO_DDRD(n)	 *((volatile u8*)(0x3A-(3*n)))
#define DIO_PIND(n)	 *((volatile u8*)(0x39-(3*n)))


/* MACROS FOR NUMBER_OF_PINS */
#define DIO_PIN_0	0
#define DIO_PIN_1	1
#define DIO_PIN_2	2
#define DIO_PIN_3	3
#define DIO_PIN_4	4
#define DIO_PIN_5	5
#define DIO_PIN_6	6
#define DIO_PIN_7	7


/* MACROS FOR Direction_OF_PINS */
#define DIO_PIN_OUTPUT 	0xFF
#define DIO_PIN_INPUT	0X00

/* MACROS FOR PINS_VALUE BADEL 0 AW 1  */
#define DIO_PIN_HIGH 	1
#define DIO_PIN_LOW		0

#endif /* MCAL_INC_DIO_REGISTER_H_ */
