#ifndef MCAL_INC_SPI_H_
#define MCAL_INC_SPI_H_

#include "STD_TYPES.h"
#include "BIT_MATH.h"

#define 		SPCR	 		*((volatile u8 * ) (0x2D))
	#define 	SPIE 			7
	#define 	SPE 			6
	#define 	DORD 			5
	#define 	MSTR 			4
	#define 	CPOL 			3
	#define 	CPHA 			2
	#define 	SPR1 			1
	#define 	SPR0 			0

#define 		SPSR 			*((volatile u8 * ) (0x2E))
	#define 	SPIF 			7
	#define 	WCOL 			6

#define 		SPDR 			*((volatile u8 * ) (0x2F))




#endif /* MCAL_INC_SPI_H_ */
