#ifndef F_CPU
#define F_CPU 12000000LU
#endif

#include "UTILITIES/STD_TYPES.h"
#include "UTILITIES/BIT_MATH.h"
#include "DIO_driver.h"

#include <util/delay.h>



void LED1_On(void);
void LED1_Off(void);
u8 BTN_GetValue(void);
void SVNSEG_Display(u8 number);

int main(void)
{
	DIO_Init();

	DIO_Write(HIGH,GRP_5_SEG1_EN);


	while(1)
	{
		//SVNSEG_Display(5);
		if( BTN_GetValue())
		{
			LED1_Off();

		}
		else
		{
			LED1_On();
		}
	}

	return 0 ;
}



void LED1_On(void)
{
	DIO_Write(HIGH,GRP_1_LED);
}

void LED1_Off(void)
{
	DIO_Write(LOW,GRP_1_LED);
}

u8 BTN_GetValue(void)
{
	return DIO_Read(GRP_3_BTN);
}

void SVNSEG_Display(u8 number)
{
	DIO_Write(number<<SEVEN_SEG_PIN,GRP_4_SEG1);
}

void SVNSEG2_Display(u8 number)
{
	DIO_Write(HIGH,GRP_5_SEG1_EN);
	DIO_Write(number,GRP_4_SEG1);
}






