//#include "../../MCAL/INC/DIO_driver.h"
#include "../../UTILITIES/STD_TYPES.h"
#include "../../UTILITIES/BIT_MATH.h"
#include "DIO_driver.h"


DIO_config_t DIO_groups [DIO_Number_of_groups]=
{
	{PORTA, 0b11110000, OUTPUT ,PULL_UP_DISABLE},
	{PORTA, 0b00001111, OUTPUT ,PULL_UP_DISABLE}
};


void DIO_Init	(void)
{
	u8 i=0;
	for(i=0;i<DIO_Number_of_groups;i++)
	{
		/*ddr = reset(mask)*/
		DDR(DIO_groups[i].port_id) 	&= ~(DIO_groups[i].mask);
		/*ddr = set(dir & mask)*/
		DDR(DIO_groups[i].port_id) 	|=  (DIO_groups[i].direction & DIO_groups[i].mask)
		/*port = reset(mask)*/
		PORT(DIO_groups[i].port_id)	&= ~(DIO_groups[i].mask);

	}

}
void DIO_Write 	(u8 data, u8 Group_id)
{

}
u8   GPIO_Read	(u8 Group_id)
{


	return 0;
}


