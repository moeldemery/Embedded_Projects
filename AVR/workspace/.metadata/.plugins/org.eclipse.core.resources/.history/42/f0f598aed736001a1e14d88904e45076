#ifndef MCAL_INC_DIO_DRIVER_H_
#define MCAL_INC_DIO_DRIVER_H_

#include "STD_TYPES.h"

#define	DIO_Number_of_groups 2


#define NUMBER_OF_PORTS 	4


#define DDRA					DDR(0)
#define DDRB					DDR(1)
#define DDRC					DDR(2)
#define DDRD					DDR(3)

#define PINA					PIN(0)
#define PINB					PIN(1)
#define PINC					PIN(2)
#define PIND					PIN(3)

#define PORT(x) 				(*(volatile u8 * ) (0x3B)-(3*x))
#define DDR(x)	 				(*(volatile u8 * ) (0x3A)-(3*x))
#define PIN(x) 					(*(volatile u8 * ) (0x39)-(3*x))

typedef struct
{
	Port_t 					port_id;
	u8					mask;
	Direction_t 		direction;
	PullUpEnable_t		pull_up_reg;

}DIO_config_t;


typedef enum {PORTA,PORTB,PORTC,PORTD} Port_t ;
typedef enum {INPUT = 0x00,	OUTPUT = 0xFF} Direction_t ;
typedef enum {PULL_UP_DISABLE = 0,	PULL_UP_ENABLE = 1} PullUpEnable_t ;

void DIO_Init	(void);
void DIO_Write 	(u8 data, u8 Group_id);
u8   GPIO_Read	(u8 Group_id);

#endif /* 1_MCAL_INC_DIO_DRIVER_H_ */
