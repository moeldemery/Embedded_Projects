#include "APP_Calc.h"

void APP_STR_CPY(u8*arr , u8*copy_value ,u16 size)
{
	int i;
	for (i = 0; i < size; ++i)
	{
		arr[i]=copy_value[i];
	}
}

void APP_STR_clr(u8*arr  ,u16 size)
{
	int i;
	for (i = 0; i < size; ++i)
	{
		arr[i]=0;
	}
}
void APP_CALC_atoi(void)
{

}

u8 lcd_display_1[16]= {0};
u8 lcd_display_2[16]= {0};
u8 curser=0;
u8 update_screen=0;
u8 first_number;
u8 first_number_flag=0;
u8 second_number;
u8 second_number_flag=0;
u8 operation;
u8 operation_selected=0;
u8 result=0;

void APP_CALCUTATOR(void)
{
		//CALC_KPD(lcd_display_1, curser);

		if(update_screen)
		{
			 CALC_SreenRefresh();
		}

		int i;
		for(i=0;i<curser;i++)
		{
			if(lcd_display_1[i]>='0' && lcd_display_1[i]<='9')
			{
				if(first_number_flag==0)
				{
					first_number=lcd_display_1[i];
					first_number_flag=1;

				}
				else if(first_number_flag ==1)
				{
					second_number=lcd_display_1[i];
					second_number_flag=1;
				}


			}
			else
			{
				if(operation_selected ==0)
				{
					APP_operation(lcd_display_1[i]);
				}
				else if(operation_selected !=0 && second_number_flag ==1)
				{
					APP_operation('=');
					//APP_STR_clr(lcd_display_1,16);
					//curser=0;
					first_number=result+'0';
					first_number_flag=1;
					//lcd_display_1[curser]=first_number;
					update_screen=1;
				}

			}
		}


}

void APP_operation(u8 opprant)
{
	switch (opprant)
	{
		case'C':
		{

			 curser=0;
			 update_screen=0;
			 first_number=0;
			 first_number_flag=0;
			 second_number=0;
			 second_number_flag=0;
			 operation=0;
			 operation_selected=0;
			 result=0;
			u8 j=0;
			for(j=0;j<16;j++)
			{
				lcd_display_1[j]=0;
				lcd_display_2[j]=0;
			}

			LCD_Clear();
			LCD_GoTO(1,1);
			break;
		}
		case '=':
		{
			if(first_number_flag==1 && operation_selected ==1  && second_number_flag ==1 && operation_selected!=0 )
			{
				switch (operation)
				{
					case 1:
					{
						result=(first_number-'0')+(second_number-'0');
						lcd_display_2[0]=result+'0';
						lcd_display_2[15]='\0';
						update_screen=1;
						operation=0;
						operation_selected--;
						break;
					}

					default:
						break;
				}
			}


			break;
		}
		case '+':
		{
			operation=1;
			//first_number_flag=1;
			operation_selected=1;
			break;
		}

		default:
		{
			APP_STR_CPY(lcd_display_2,"error",16);
			//update_screen=1;
			break;
		}

	}
}

u8 CALC_KPD(void)
{
	u8 key,lastKey,return_key;
	key = KPD_Scan();
	lastKey = key;
	key = KPD_Scan();
	if(key != lastKey && key!=0)
	{
		return_key=key;
	}
	else
	{
		return_key=0;
	}
	return return_key;
}

void CALC_SreenRefresh(void)
{
	if (update_screen)
	{
		LCD_Clear();
		LCD_void_SendString(lcd_display_1);
		LCD_GoTO(1,2);
		LCD_void_SendString(lcd_display_2);
		LCD_GoTO(curser+1,1);
		update_screen=0;
	}

}

void CALC_getNumber(void)
{

	u8 key,number;
	static u8 index=2;
	key =CALC_KPD();

	if (key !=0)
	{
		number=(10*index)+(key-'0');
		lcd_display_1[index]=key;
		index++;
		update_screen=1;
	}

	if(number == 12)
	{
		LED1_On();
	}

}
