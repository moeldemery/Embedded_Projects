u8 Stickman_position=7;
u8 book__position=4;
void APP_LCD_story(void)
{
	u8 customChar_hi[] = {
		  0B01110,
		  0B01110,
		  0B00101,
		  0B11111,
		  0B10100,
		  0B00100,
		  0B01010,
		  0B10001
		};
	u8 customChar_stand[] = {
		  0B01110,
		  0B01110,
		  0B00100,
		  0B11111,
		  0B00100,
		  0B00100,
		  0B01010,
		  0B10001
		};
	u8 customChar_dance2[] = {
		  0B01110,
		  0B01110,
		  0B10100,
		  0B11111,
		  0B00101,
		  0B00100,
		  0B01010,
		  0B10001
		};
//	u8 customChar_inverted_stickman[] = {
