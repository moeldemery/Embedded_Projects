#include <TMR.h>

#define	DIO_Number_of_groups 15

TMR_config_t DIO_groups [TMR_Number_of_groups]=
{
	{	PORTD , 0B10000000 , OUTPUT , DO_NOT_CARE	} ,		/*led1 		1 group*/
	{	PORTD , 0B01100000 , OUTPUT	, DO_NOT_CARE	} ,		/*led2 		2 group*/
	{	PORTD , 0B00000001 , INPUT  , PULL_UP_EN	} ,		/*BTN0 		3 group*/
	{	PORTC , 0B11110000 , OUTPUT , DO_NOT_CARE	} ,		/*SEG1 		4 group*/
	{	PORTC , 0B00000100 , OUTPUT , DO_NOT_CARE	} ,		/*SEG1_EN 	5 group*/
	{	PORTC , 0B00001000 , OUTPUT , DO_NOT_CARE	} ,		/*SEG2_EN 	6 group*/
	{	PORTD , 0B00000010 , INPUT  , PULL_UP_EN	} ,		/*BTN1 		7 group*/
	{	PORTD , 0B00000100 , INPUT  , PULL_UP_EN	} ,		/*BTN2 		8 group*/
	{ 	PORTB , 0B00001000 , OUTPUT , DO_NOT_CARE  	} ,		/*EN		9 group*/
	{ 	PORTB , 0B00000100 , OUTPUT , DO_NOT_CARE   } ,		/*RW		10 group*/
	{ 	PORTB , 0B00000010 , OUTPUT , DO_NOT_CARE   } ,		/*RS		11 group*/
	{ 	PORTA , 0B11110000 , OUTPUT , DO_NOT_CARE  	} ,		/*data		12 group*/
	{	PORTD , 0B00000100 , INPUT  , PULL_UP_EN	} ,		/*EXT INT 	13 GROUP*/
	{	PORTB , 0B11110000 , OUTPUT , DO_NOT_CARE	},
	{	PORTB , 0B11110000 , INPUT  , PULL_UP_EN	}
